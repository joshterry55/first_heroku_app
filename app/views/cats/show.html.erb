<h1><%= @cat.name %></h1>
<% if @cat.picture? %>
  <%= cl_image_tag(@cat.picture.path, { size: '125x125', crop: :fit }) %>
<% end %>


<p> Age: <%= @cat.age %> </p>
<p> Gender: <%= @cat.gender %> </p>
<p> Fur color: <%= @cat.fur_color %> </p>

<%= link_to "All Cats", cats_path %>
<%= link_to "Edit", edit_cat_path(@cat) %>
<%= link_to "Delete", cat_path(@cat), method: :delete %>
